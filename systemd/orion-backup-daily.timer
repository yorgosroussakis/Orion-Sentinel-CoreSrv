[Unit]
Description=Orion Sentinel Daily Database Backup Timer
Documentation=https://github.com/orionsentinel/Orion-Sentinel-CoreSrv

[Timer]
# Run daily at 3:00 AM
OnCalendar=*-*-* 03:00:00

# If system was off at scheduled time, run when it comes back up
Persistent=true

# Random delay up to 15 minutes
RandomizedDelaySec=900

[Install]
WantedBy=timers.target
