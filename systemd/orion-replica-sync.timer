[Unit]
Description=Orion Sentinel External SSD Replication Timer
Documentation=https://github.com/orionsentinel/Orion-Sentinel-CoreSrv

[Timer]
# Run nightly at 02:30
OnCalendar=*-*-* 02:30:00

# If system was off at scheduled time, run when it comes back up
Persistent=true

# Random delay up to 15 minutes to avoid resource spikes
RandomizedDelaySec=900

# Accuracy - don't need precise timing
AccuracySec=60

[Install]
WantedBy=timers.target
